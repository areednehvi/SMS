<UserControl x:Class="SMS.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SMS.Controllers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:SMS.Views"
             mc:Ignorable="d">
    <UserControl.Resources>
        <vm:UsersController x:Key="UsersListController" />

    </UserControl.Resources>
    <Grid DataContext="{Binding Source={StaticResource UsersListController}}">
        <!-- List -->
        <Grid x:Name="grdUsersList" Visibility="{Binding Users.ListVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="50" />
                <RowDefinition x:Name="grdRowNo2" Height="*" />
            </Grid.RowDefinitions>
            <materialDesign:Card Grid.Row="0" Padding="5"  Margin="5,10,5,5" >
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Add New User" ToolTip="Click to add a User" Height="40" FontSize="18" Command="{Binding AddNewUserCommand}" ></Button>
                </WrapPanel>

            </materialDesign:Card>
            <Label  Grid.Row="1"   Margin="10,10,0,0"  HorizontalAlignment="Left" Content="Click on any User to modify it" FontStyle="Italic">
            </Label>
            <StackPanel Grid.Row="1"   Margin="0,0,10,0"  Orientation="Horizontal"  HorizontalAlignment="Right">
                <Label x:Name="lblPageNo" Content="{Binding Users.PageNo}" FontStyle="Italic" Margin="0,12,5,0"/>
                <Button ToolTip="Move to previous page" Width="26" Height="26" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Command="{Binding PreviousPageCommand}" 
                    Margin="0,0,0,0" HorizontalAlignment="Right" RenderTransformOrigin="0.385,2.01">
                    <Viewbox Width="30" Height="30">
                        <Canvas Width="30" Height="30">
                            <Path Data="M7,12L12,7V10H16V14H12V17L7,12M22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12M20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <Button ToolTip="Move to next page" Width="26" Height="26" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Command="{Binding NextPageCommand}" 
                    Margin="5,0,0,0" HorizontalAlignment="Right" RenderTransformOrigin="0.385,2.01">
                    <Viewbox Width="30" Height="30">
                        <Canvas Width="30" Height="30">
                            <Path Data="M17,12L12,17V14H8V10H12V7L17,12M2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12M4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>
            </StackPanel>
            <DataGrid Grid.Row="2" Cursor="Hand" x:Name="dataGridGardesList" AlternationCount="2" AlternatingRowBackground="#FFD7FDFA" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding Users.UsersList}"  Margin="10,0,10,0"  VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" FontSize="14" SelectedItem="{Binding Users.SelectedItemInUsersList}">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FF009688"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="17"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="ToolTip" Value="Click to sort"/>
                        <Setter Property="BorderThickness" Value="0 0 3 0"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Name" Binding="{Binding full_name}"/>
                    <DataGridTextColumn Width="*" Header="Login" Binding="{Binding username}"/>
                    <DataGridTextColumn Width="*" Header="Phone" Binding="{Binding phone}" />
                    <DataGridTextColumn Width="*" Header="Is Active" Binding="{Binding is_active}" />
                    <DataGridTextColumn Width="*" Header="Last Login" Binding="{Binding last_login_time,StringFormat='dd/MM/yyyy hh:mm tt'}" />
                </DataGrid.Columns>
                <!-- the following defines sub rows-->
                <!--<DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="Row Detail" Margin="10" />
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>-->
            </DataGrid>
            <TextBlock Grid.Row="2" Text="No Record(s) Found" FontSize="20" Foreground="Gray" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,200,0,0" Visibility="{Binding Users.NoRecordsFound}" />
        </Grid>

        <!-- Form -->
        <materialDesign:Card Margin="5,5,5,5" >
            <Grid x:Name="grdUsersForm" Visibility="{Binding Users.FormVisibility}">
                <StackPanel>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="65" />
                            <RowDefinition Height="65" />
                            <RowDefinition Height="65" />
                            <RowDefinition Height="65" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Row 0 -->
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="LightGray" Background="#FFF3F3F3">
                            <Label Content="Name *" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF009688" />
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1"  BorderThickness="1"  BorderBrush="LightGray" Background="White" >
                            <TextBox  VerticalAlignment="Center" FontSize="18"   Width="300" Text="{Binding Users.User.full_name}"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" BorderThickness="1" BorderBrush="LightGray" Background="#FFF3F3F3">
                            <Label Content="Capacity *" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF009688" />
                        </Border>
                        <Border Grid.Row="0" Grid.Column="3"  BorderThickness="1"  BorderBrush="LightGray" Background="White">
                            <TextBox  VerticalAlignment="Center" FontSize="18" Width="300" Text="{Binding Users.User.capacity}"/>
                        </Border>

                        <!-- Row 1 -->
                        <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" BorderBrush="LightGray" Background="#FFF3F3F3">
                            <Label Content="Created By *" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF009688"  />
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1"  BorderThickness="1"  BorderBrush="LightGray" Background="White" >
                            <Label  VerticalAlignment="Center" FontSize="18"   Width="300" Content="{Binding Users.CurrentLogin.Username}"/>
                        </Border>
                    </Grid>
                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                        <Button  VerticalAlignment="Center" Margin="0,0,20,20" FontSize="18" Width="140" Height="40" Command="{Binding CancelNewUserCommand}" Background="#2f4050" Content="Cancel"/>
                        <Button  VerticalAlignment="Center" Margin="0,0,20,20" FontSize="18" Width="140" Height="40" Content="Save" Command="{Binding SaveUsersCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
